        <TextView
            android:id="@+id/brainbox_stat_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="25sp"
            android:layout_marginTop="20dp"
            android:text=""/>

    </LinearLayout>

